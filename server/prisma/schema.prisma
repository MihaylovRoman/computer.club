generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  phone    String   @unique
  password String
  balance  Decimal  @default(0)
  booked   Booked[]
  role     Role     @default(USER)
}

model Booked {
  id     Int     @id @default(autoincrement())
  user   User    @relation(fields: [userId], references: [id])
  userId Int
  hall   Hall    @relation(fields: [hallId], references: [id])
  hallId Int
  seat   Seat    @relation(fields: [seatId], references: [id])
  seatId Int
  price  Decimal
}

model Hall {
  id          Int           @id @default(autoincrement())
  name        String
  price       Decimal
  Booked      Booked[]
  SeatsInHall SeatsInHall[]
  image       String @default("")
}

model Seat {
  id          Int           @id @default(autoincrement())
  status      Status        @default(FREE)
  SeatsInHall SeatsInHall[]
  Booked      Booked[]
}

model SeatsInHall {
  id     Int  @id @default(autoincrement())
  seat   Seat @relation(fields: [seatId], references: [id])
  seatId Int
  hall   Hall @relation(fields: [hallId], references: [id])
  hallId Int
}

enum Status {
  OCCUPIED
  FREE
}

enum Role {
  USER
  ADMIN
}
